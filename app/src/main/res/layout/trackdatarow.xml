<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/background">

    <RelativeLayout android:layout_centerVertical="true"
                    android:paddingLeft="4dp" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

        <TextView android:id="@+id/track_name"
                  android:layout_width="wrap_content" android:layout_height="16dip"
                  android:layout_alignParentLeft="true"
                  android:textStyle="bold" android:textColor="#777777"
                  android:shadowRadius="0.5"
                  android:shadowDx="0" android:shadowDy="0" android:layout_marginLeft="4dip"></TextView>
        <TextView android:id="@+id/artist_name" android:layout_alignParentLeft="true"
                  android:text="Best Badger: " android:layout_width="wrap_content" android:layout_marginLeft="4dip"
                  android:layout_height="wrap_content" android:layout_below="@id/track_name"></TextView>
    </RelativeLayout>

    <Button android:id="@+id/track_button"
            android:text="Artist" android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:layout_width="wrap_content" android:layout_height="fill_parent"></Button>



</RelativeLayout>